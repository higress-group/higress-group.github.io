      "linear-gradient(47deg, rgb(220, 222, 228) 0%, rgb(220, 222, 228) 100%) rgb(220, 222, 228)",
    color: "#121316",
  },
];
---

<section class="px-4 md:px-6 lg:px-10">
  <div class="mb-10 flex flex-col gap-4 items-center justify-center">
      <div class="text-[1.5rem] md:text-[2.5rem] whitespace-pre-line text-center">{t('home.customers.title')}</div>
      <Button mode="normal" width="10rem" >
        <a>{t('home.customers.learn_more')}</a>
      </Button>
    </div>
  <div class="mx-auto">
    <CardCarousel items={cases} />
  </div>
</section>