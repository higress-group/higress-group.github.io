---
import CardCarousel from "../components/card-carousel/CardCarousel.astro";
import Button from "../components/button/Button.astro";
import { useTranslations } from "@/i18n/utils";

const locale = Astro.currentLocale || 'root';
const t = useTranslations(locale);

interface CaseCard {
  author: string;
  title: string;
  desc: string;
  link: string;
  bgColor: string;
  color: string;
}

const cases: CaseCard[] = [
  {
    author: t('home.customers.case.ctrip.author'),
    title: t('home.customers.case.ctrip.title'),
    desc: t('home.customers.case.ctrip.desc'),
    link: "https://higress.ai/blog/ctrip-s-practical-implementation-of-ai-gateway",
    bgColor:
      "linear-gradient(47deg, rgb(62, 92, 244) 0%, rgb(62, 92, 244) 100%) rgb(62, 92, 244)",
    color: "#fff",
  },
  {
    author: t('home.customers.case.junrun.author'),
    title: t('home.customers.case.junrun.title'),
    desc: t('home.customers.case.junrun.desc'),
    link: "https://higress.ai/blog/higress-mcp-practices",
    bgColor:
      "linear-gradient(47deg, rgb(75, 79, 92) 0%, rgb(75, 79, 92) 100%) rgb(75, 79, 92)",
    color: "#fff",
  },
  {
    author: t('home.customers.case.alibaba.author'),
    title: t('home.customers.case.alibaba.title'),
    desc: t('home.customers.case.alibaba.desc'),
    link: "https://higress.ai/blog/alibaba-mcp-distributed-implementation-practice",
    bgColor:
      "linear-gradient(47deg, rgb(62, 92, 244) 0%, rgb(62, 92, 244) 100%) rgb(62, 92, 244)",
    color: "#fff",
  },
  {
    author: t('home.customers.case.sofa.author'),
    title: t('home.customers.case.sofa.title'),
    desc: t('home.customers.case.sofa.desc'),
    link: "https://higress.ai/blog/ctrip-s-practical-implementation-of-ai-gateway",
    bgColor:
      "linear-gradient(47deg, rgb(220, 222, 228) 0%, rgb(220, 222, 228) 100%) rgb(220, 222, 228)",
    color: "#121316",
  },
  {
    author: t('home.customers.case.zc.author'),
    title: t('home.customers.case.zc.title'),
    desc: t('home.customers.case.zc.desc'),
    link: "https://higress.ai/blog/how-to-pay-off-the-technical-debt-of-gateway",
