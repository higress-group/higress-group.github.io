---
import Button from "../../components/button/Button.astro";

interface Props {
  navItems: {
    type: string;
    label: string;
    href?: string;
    target?: string;
    items?: { label: string; href: string }[];
  }[];
  homeUrl: string;
}

const { navItems, homeUrl } = Astro.props;
---

<!-- Mobile Menu Overlay -->
<div
  id="mobile-menu"
  class="fixed inset-0 z-50 bg-white hidden flex-col overflow-y-auto h-screen transition-all duration-300 ease-in-out opacity-0 translate-y-4"
>
  <!-- Mobile Menu Header -->
  <div class="flex items-center justify-between px-4 h-16 border-b border-gray-100">
    <a href={homeUrl} class="flex items-center">
      <img src="https://img.alicdn.com/imgextra/i3/O1CN01H2YwEH1OL9g5izfgK_!!6000000001688-55-tps-101-24.svg" alt="Higress Logo" class="h-8 w-auto" />
    </a>
    <button
      id="close-menu-btn"
      type="button"
      class="p-2 focus:outline-none bg-transparent"
      aria-label="Close menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu Content -->
  <div class="p-4 flex flex-col gap-6">
    <ul class="flex flex-col gap-4 p-0 m-0">
      {navItems.map((item) => (
        item.type === 'dropdown' ? (
          <li class="list-none">
            <details class="group">
              <summary class="flex items-center justify-between font-medium text-gray-900 cursor-pointer list-none py-2">
                {item.label}
                <svg class="w-4 h-4 transition-transform duration-200 group-open:rotate-180 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </summary>
              <ul class="mt-2 ml-4 flex flex-col gap-3 pl-4 py-2 p-0 m-0">
                {item.items?.map((sub) => (
                  <li class="list-none">
                    <a
                      href={sub.href}
                      class="text-sm text-gray-600 hover:text-primary block py-1"
                    >
                      {sub.label}
                    </a>
                  </li>
                ))}
              </ul>
            </details>
          </li>
        ) : (
          <li class="list-none">
            <a
              href={item.href}
              target={item.target}
              class="font-medium text-gray-900 block py-2"
            >
              {item.label}
            </a>
          </li>
        )
      ))}
    </ul>

    <div class="w-full">
      <a
        href="https://github.com/alibaba/higress"
        target="_blank"
        class="inline-flex items-center justify-center gap-2 w-full px-4 py-2 transition-opacity hover:opacity-70"
      >
        <svg class="w-6 h-6 fill-current text-gray-900" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span class="text-gray-900 font-medium">GitHub</span>
      </a>
    </div>
  </div>
</div>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const closeMenuBtn = document.getElementById('close-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  function toggleMenu(show: boolean) {
    if (!mobileMenu) return;
    if (show) {
      mobileMenu.style.top = '0px';
      mobileMenu.style.height = '100vh';
      mobileMenu.classList.remove('hidden');
      mobileMenu.classList.add('flex');
      // Trigger reflow to ensure transition works
      requestAnimationFrame(() => {
        mobileMenu.classList.remove('opacity-0', 'translate-y-4');
        mobileMenu.classList.add('opacity-100', 'translate-y-0');
      });
      document.body.style.overflow = 'hidden'; // Prevent background scrolling
      document.body.setAttribute('data-main-mobile-menu-open', 'true');
    } else {
      mobileMenu.classList.remove('opacity-100', 'translate-y-0');
      mobileMenu.classList.add('opacity-0', 'translate-y-4');

      // Wait for transition to finish before hiding
      mobileMenu.addEventListener('transitionend', () => {
        if (mobileMenu.classList.contains('opacity-0')) {
            mobileMenu.classList.add('hidden');
            mobileMenu.classList.remove('flex');
        }
      }, { once: true });

      document.body.style.overflow = '';
      document.body.removeAttribute('data-main-mobile-menu-open');
    }
  }

  mobileMenuBtn?.addEventListener('click', () => toggleMenu(true));
  closeMenuBtn?.addEventListener('click', () => toggleMenu(false));
</script>

<style>
  /* Hide scrollbar for mobile menu if needed */
  #mobile-menu {
    -webkit-overflow-scrolling: touch;
  }
</style>
