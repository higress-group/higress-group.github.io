---
/**
 * ScrollProgress - Scroll progress bar and back-to-top button
 * Improves navigation on long pages
 */
import { useTranslations } from "@/i18n/utils";

const locale = Astro.currentLocale || 'root';
const t = useTranslations(locale);
---

<!-- Scroll Progress Bar -->
<div id="scroll-progress-bar" class="scroll-progress-bar"></div>

<!-- Back to Top Button -->
<button
  id="back-to-top"
  class="back-to-top"
  aria-label={t('scroll.back_to_top')}
  title={t('scroll.back_to_top')}
>
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="m18 15-6-6-6 6"/>
  </svg>
  <span class="sr-only">{t('scroll.back_to_top')}</span>
</button>

<style>
  /* Scroll Progress Bar */
  .scroll-progress-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 0%;
    height: 3px;
    background: linear-gradient(90deg, #3E5CF4 0%, #6D5BFF 100%);
    z-index: 9999;
    transition: width 0.1s ease-out;
    box-shadow: 0 0 10px rgba(62, 92, 244, 0.5);
  }

  /* Back to Top Button */
  .back-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #3E5CF4 0%, #6D5BFF 100%);
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(62, 92, 244, 0.4);
    z-index: 9998;
  }

  .back-to-top:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(62, 92, 244, 0.5);
  }

  .back-to-top:active {
    transform: translateY(0);
  }

  .back-to-top.visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .back-to-top.visible:hover {
    transform: translateY(-4px);
  }

  /* Screen reader only */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .back-to-top {
      bottom: 1.5rem;
      right: 1.5rem;
      width: 44px;
      height: 44px;
    }
  }
</style>

<script>
  // Scroll Progress and Back to Top functionality
  const progressBar = document.getElementById('scroll-progress-bar');
  const backToTopBtn = document.getElementById('back-to-top');
  
  // Throttle function for performance
  function throttle<T extends (...args: unknown[]) => void>(fn: T, wait: number): (...args: Parameters<T>) => void {
    let lastTime = 0;
    return function (this: unknown, ...args: Parameters<T>) {
      const now = Date.now();
      if (now - lastTime >= wait) {
        lastTime = now;
        fn.apply(this, args);
      }
    };
  }

  function updateProgress() {
    const scrollTop = window.scrollY;
    const docHeight = document.documentElement.scrollHeight - window.innerHeight;
    const scrollPercent = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
    
    // Update progress bar
    if (progressBar) {
      progressBar.style.width = `${scrollPercent}%`;
    }
    
    // Show/hide back to top button (show after scrolling 1 viewport height)
    if (backToTopBtn) {
      if (scrollTop > window.innerHeight) {
        backToTopBtn.classList.add('visible');
      } else {
        backToTopBtn.classList.remove('visible');
      }
    }
  }

  // Smooth scroll to top
  function scrollToTop() {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  }

  // Event listeners
  window.addEventListener('scroll', throttle(updateProgress, 16), { passive: true });
  backToTopBtn?.addEventListener('click', scrollToTop);
  
  // Initial state
  updateProgress();
</script>
