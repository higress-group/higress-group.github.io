        outline: 2px solid #EDF2FC;
        outline-offset: 2px;
    }
    
    /* Tab 内容区域样式 */
    .tab-contents {
        width: 100%;
        min-height: 100px;
    }
    
    .tab-content-n {
        display: block;
        width: 100%;
    }
    
    .tab-content-n.hidden {
        display: none !important;
    }
    
    /* 响应式调整 */
    @media (max-width: 1023px) {
        /* 移动端容器调整 */
