---
import MobileMenuToggle from '@astrojs/starlight/components/MobileMenuToggle.astro';
import Switcher from '../switcher/Switcher.astro';
import { sidebarCategoryDefaultLink } from "../../utils/sign";
import { useTranslations } from "../../i18n/utils";

const { hasSidebar } = Astro.locals.starlightRoute;
const locale = Astro.currentLocale || 'root';
const t = useTranslations(locale);

const options = [
  { label: t('page.header.gateway'), value: 'gateway' },
  { label: t('page.header.ai'), value: 'ai' },
  { label: t('page.header.market'), value: 'market' }
];

// Determine current value based on URL
const pathname = Astro.url.pathname;
let currentValue = 'gateway';
if (pathname.includes('/ai/')) {
  currentValue = 'ai';
} else if (pathname.includes('/plugins') || pathname.includes('/market')) {
  currentValue = 'market';
}
---

<div class="page sl-flex" style="--offset-top: 160px">
	<header class="header">
  	<slot name="header" />
    <div class="mx-auto px-10 fixed top-0 left-0 w-full h-40 header-docs-section flex items-end justify-start pb-4">
       <Switcher id="doc-switcher" value={currentValue} options={options} theme="light" />
    </div>
	</header>
	{
		hasSidebar && (
			<nav class="sidebar print:hidden" aria-label={Astro.locals.t('sidebarNav.accessibleLabel')}>
				<MobileMenuToggle />
				<div id="starlight__sidebar" class="sidebar-pane">
					<div class="p-8 sidebar-content sl-flex">
						<slot name="sidebar" />
					</div>
				</div>
			</nav>
		)
	}
	<div class="main-frame"><slot /></div>
</div>

<style>
  .header-docs-section {
		background-image: url("/images/doc-bg.png");
		background-size: cover;
		background-repeat: no-repeat;
		background-position-y: center;
	}
	@layer starlight.core {

		.page {
			flex-direction: column;
			min-height: 100vh;
		}

		.header {
			z-index: var(--sl-z-index-navbar);
			position: fixed;
			inset-inline-start: 0;
			inset-block-start: 0;
			width: 100%;
			height: var(--sl-nav-height);
			/*padding: var(--sl-nav-pad-y) var(--sl-nav-pad-x);*/
			/*padding-inline-end: var(--sl-nav-pad-x);*/
		}

		:global([data-has-sidebar]) .header {
			padding-inline-end: calc(
				var(--sl-nav-gap) + var(--sl-nav-pad-x) + var(--sl-menu-button-size)
			);
		}

		.sidebar-pane {
			visibility: var(--sl-sidebar-visibility, hidden);
			position: fixed;
			z-index: var(--sl-z-index-menu);
			inset-block: var(--sl-nav-height) 0;
			inset-inline-start: 0;
			width: 100%;
			background-color: var(--sl-color-black);
			overflow-y: auto;
			top: var(--offset-top);
		}

		:global([aria-expanded='true']) ~ .sidebar-pane {
			--sl-sidebar-visibility: visible;
		}

		.sidebar-content {
			height: 100%;
			min-height: max-content;
			flex-direction: column;
			gap: 1rem;
		}

		@media (min-width: 50rem) {
			.sidebar-content::after {
				content: '';
				padding-bottom: 1px;
			}
		}

		.main-frame {
			padding-inline-start: var(--sl-content-inline-start);
			padding-top: calc(var(--offset-top) - 60px);
		}

		@media (min-width: 50rem) {
			:global([data-has-sidebar]) .header {
				padding-inline-end: var(--sl-nav-pad-x);
			}
			.sidebar-pane {
				--sl-sidebar-visibility: visible;
				width: var(--sl-sidebar-width);
				background-color: var(--sl-color-bg-sidebar);
				border-inline-end: 1px solid var(--sl-color-hairline-shade);
			}
		}
	}
</style>

<script define:vars={{ sidebarCategoryDefaultLink }}>
  const switcher = document.getElementById('doc-switcher');

  switcher?.addEventListener('change', (e) => {
    const value = e.detail.value;
    let url = sidebarCategoryDefaultLink.latest; // default to gateway

    if (value === 'ai') {
      url = sidebarCategoryDefaultLink.ai;
    } else if (value === 'market') {
      url = '/plugins'; // Placeholder for HiMarket
    }

    // Handle Locale
    // Check if current URL has /en/
    const isEn = window.location.pathname.startsWith('/en/');
    if (isEn && !url.startsWith('/en/')) {
        // Ensure target is /en/
        if (url.startsWith('/')) {
            url = '/en' + url;
        } else {
            url = '/en/' + url;
        }
    } else if (!isEn && url.startsWith('/en/')) {
         // Should not happen with default links but good safety
         url = url.replace('/en/', '/');
    }

    window.location.href = url;
  });
</script>
