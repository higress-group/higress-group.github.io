---
import type { Props } from '@astrojs/starlight/props';
import DocsHeader from '@components/common/Header/index.astro';
 
---
 
<DocsHeader align="docs" lang={Astro.props.lang} {...Astro.props} />

<script is:inline>
function setLightMode(document) {
    const html = document.documentElement;
    html.setAttribute('data-theme', 'light');
}

setLightMode(document);

document.addEventListener('astro:before-swap', ev => {
    console.log("=======astro:before-swap=======")
    setLightMode(ev.newDocument);
});
</script>