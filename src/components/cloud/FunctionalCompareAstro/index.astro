<script>
  // @ts-nocheck
  // 简化的初始化逻辑，适配 client:load 指令
  
  let activeTab = 'Public';
  let version = 'community';
  let isSticky = false;
  let isShow = false;
  let isCollapsed = true;
  let scrollPosition = 0; // 记录滚动位置
  
  const versionContain = {
    'community': 'free',
    'api-gateway': 'speciality', 
    'ai-gateway': 'serverless',
    'exclusive': 'speciality'
  };
  
  // 公有云数据版本配置
  const dataVersion = [
    { key: 'community', value: '社区版' },
    { key: 'api-gateway', value: '云原生 API 网关' },
    { key: 'ai-gateway', value: 'AI 网关' }
  ];

  // 专有云数据版本配置
  const privateDataVersion = [
    { key: 'community', value: '社区版' },
    { key: 'exclusive', value: '飞天专属版' }
  ];

  // 判断是否为safari浏览器
  function isSafari() {
    return /^((?!chrome|android).)*safari/i.test(navigator.userAgent);
  }
  
  // 强制切换表格内容的函数
  function switchTableContent(activeTabId) {
    const publicTables = document.getElementById('public-tables');
    const privateTables = document.getElementById('private-tables');
    const publicStickyTable = document.getElementById('public-sticky-table');
    const privateStickyTable = document.getElementById('private-sticky-table');
    const publicMobileTables = document.querySelector('.public-mobile-tables');
    const privateMobileTables = document.querySelector('.private-mobile-tables');
    const publicOptions = document.querySelector('.public-options');
    const privateOptions = document.querySelector('.private-options');
    const publicHeaders = document.querySelectorAll('.public-header');
    const privateHeaders = document.querySelectorAll('.private-header');
    
    // 隐藏所有内容
    [publicTables, privateTables].forEach(el => {
      if (el) {
        el.style.display = 'none';
        el.style.visibility = 'hidden';
      }
    });
    
    [publicStickyTable, privateStickyTable].forEach(el => {
      if (el) el.style.display = 'none';
    });
    
    [publicMobileTables, privateMobileTables].forEach(el => {
      if (el) el.style.display = 'none';
    });
    
    [publicOptions, privateOptions].forEach(el => {
      if (el) el.style.display = 'none';
    });
    
    publicHeaders.forEach(el => {
      el.style.display = 'none';
      el.style.visibility = 'hidden';
    });
    
    privateHeaders.forEach(el => {
      el.style.display = 'none';
      el.style.visibility = 'hidden';
    });
    
    // 显示对应Tab内容
    if (activeTabId === 'Public') {
      if (publicTables) {
        publicTables.style.display = 'block';
        publicTables.style.visibility = 'visible';
      }
      if (publicStickyTable) publicStickyTable.style.display = 'table';
      if (publicMobileTables) publicMobileTables.style.display = 'block';
      if (publicOptions) publicOptions.style.display = 'block';
      
      publicHeaders.forEach(el => {
        el.style.display = 'table';
        el.style.visibility = 'visible';
      });
      
    } else if (activeTabId === 'Private') {
      if (privateTables) {
        privateTables.style.display = 'block';
        privateTables.style.visibility = 'visible';
      }
      if (privateStickyTable) privateStickyTable.style.display = 'table';
      if (privateMobileTables) privateMobileTables.style.display = 'block';
      if (privateOptions) privateOptions.style.display = 'block';
      
      privateHeaders.forEach(el => {
        el.style.display = 'table';
        el.style.visibility = 'visible';
      });
    }
    
    updateMobileVersionText();
  }
  
  // Tab切换处理
  function handleTabChange(event) {
    activeTab = event.detail.activeTab;
    switchTableContent(activeTab);
    updateMobileContent();
  }
  
  // 滚动处理
  function handleScroll() {
    const functionalWrapper = document.querySelector('.functional-compare-wrapper');
    if (!functionalWrapper) return;
    
    const distanceFromTop = functionalWrapper.getBoundingClientRect().top;
    const newIsSticky = distanceFromTop < 0;
    
    if (newIsSticky !== isSticky) {
      isSticky = newIsSticky;
      const stickyTable = document.getElementById('sticky-table-bottom');
      if (stickyTable) {
        stickyTable.style.display = isSticky && isCollapsed ? 'block' : 'none';
      }
    }
  }
  
  // 移动端版本文本更新
  function updateMobileVersionText() {
    const versionText = document.querySelector('.version-text');
    if (!versionText) return;
    
    let displayName = '社区版';
    if (activeTab === 'Private') {
      const found = privateDataVersion.find(v => v.key === version);
      displayName = found ? found.value : '社区版';
    } else {
      const found = dataVersion.find(v => v.key === version);
      displayName = found ? found.value : '社区版';
    }
    
    versionText.textContent = displayName;
  }
  
  // 移动端内容更新
  function updateMobileContent() {
    const versionKey = versionContain[version];
    
    if (activeTab === 'Private') {
      const contents = document.querySelectorAll('.private-mobile-tables .version-content-private');
      contents.forEach(content => {
        content.style.display = content.dataset.version === versionKey ? 'block' : 'none';
      });
    } else {
      const contents = document.querySelectorAll('.public-mobile-tables .version-content');
      contents.forEach(content => {
        content.style.display = content.dataset.version === versionKey ? 'block' : 'none';
      });
    }
  }
  
  // 初始化函数
  function init() {
    // 应用基础样式
    const functionalWrapper = document.querySelector('.functional-compare-wrapper');
    if (functionalWrapper) {
      functionalWrapper.style.paddingLeft = '1rem';
      functionalWrapper.style.paddingRight = '1rem';
    }
    
    // Safari折叠功能处理
    const collapseCheckbox = document.getElementById('collapse-checkbox');
    const collapseContent = document.querySelector('.collapse-content-dynamic');
    
    if (!isSafari() && collapseCheckbox) {
      collapseCheckbox.style.display = 'block';
      collapseCheckbox.checked = isCollapsed;
      if (collapseContent) {
        collapseContent.classList.add('collapse-content');
      }
      
      // 监听折叠状态变化
      collapseCheckbox.addEventListener('change', function() {
        isCollapsed = this.checked;
        const stickyTable = document.getElementById('sticky-table-bottom');
        if (stickyTable) {
          stickyTable.style.display = isSticky && isCollapsed ? 'block' : 'none';
        }
      });
    } else if (collapseCheckbox) {
      collapseCheckbox.style.display = 'none';
      if (collapseContent) {
        collapseContent.classList.remove('collapse-content');
      }
    }
    
    // 移动端模态框处理
    const modal = document.querySelector('.mobile-modal');
    const modalToggle = document.getElementById('my_modal_6');
    const closeModal = document.querySelector('.close-modal');
    const btnSelects = document.querySelectorAll('.btn-select');
    const versionSelector = document.querySelector('.version-selector');
    
    // 双重触发机制：label点击 + 直接点击事件
    if (versionSelector && modalToggle && modal) {
      // 直接点击触发
      versionSelector.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        isShow = !isShow;
        modalToggle.checked = isShow;
        
        if (isShow) {
          // 记录当前滚动位置
          scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
          
          modal.style.display = 'flex';
          // 阻止页面滚动但保持位置
          document.body.style.overflow = 'hidden';
          document.body.style.position = 'fixed';
          document.body.style.top = `-${scrollPosition}px`;
          document.body.style.width = '100%';
        } else {
          modal.style.display = 'none';
          // 恢复页面滚动并还原位置
          document.body.style.overflow = '';
          document.body.style.position = '';
          document.body.style.top = '';
          document.body.style.width = '';
          window.scrollTo(0, scrollPosition);
        }
      });
      
      // checkbox状态变化备用监听
      modalToggle.addEventListener('change', function() {
        isShow = this.checked;
        if (isShow) {
          // 记录当前滚动位置
          scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
          
          modal.style.display = 'flex';
          // 阻止页面滚动但保持位置
          document.body.style.overflow = 'hidden';
          document.body.style.position = 'fixed';
          document.body.style.top = `-${scrollPosition}px`;
          document.body.style.width = '100%';
        } else {
          modal.style.display = 'none';
          // 恢复页面滚动并还原位置
          document.body.style.overflow = '';
          document.body.style.position = '';
          document.body.style.top = '';
          document.body.style.width = '';
          window.scrollTo(0, scrollPosition);
        }
      });
    }
    
    // 关闭按钮
    if (closeModal && modalToggle && modal) {
      closeModal.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        isShow = false;
        modalToggle.checked = false;
        modal.style.display = 'none';
        
        // 恢复页面滚动并还原位置
        document.body.style.overflow = '';
        document.body.style.position = '';
        document.body.style.top = '';
        document.body.style.width = '';
        window.scrollTo(0, scrollPosition);
      });
    }
    
    // 点击遮罩关闭模态框
    if (modal) {
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          isShow = false;
          if (modalToggle) modalToggle.checked = false;
          modal.style.display = 'none';
          
          // 恢复页面滚动并还原位置
          document.body.style.overflow = '';
          document.body.style.position = '';
          document.body.style.top = '';
          document.body.style.width = '';
          window.scrollTo(0, scrollPosition);
        }
      });
    }
    
    btnSelects.forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        version = this.dataset.version || 'community';
        updateMobileVersionText();
        updateMobileContent();
        
        // 关闭模态框
        isShow = false;
        if (modalToggle) modalToggle.checked = false;
        if (modal) modal.style.display = 'none';
        
        // 恢复页面滚动并还原位置
        document.body.style.overflow = '';
        document.body.style.position = '';
        document.body.style.top = '';
        document.body.style.width = '';
        window.scrollTo(0, scrollPosition);
      });
    });
    
    // 绑定事件监听器
    window.addEventListener('scroll', handleScroll);
    window.addEventListener('tabChanged', handleTabChange);
    
    // 添加页面隐藏时的清理机制
    document.addEventListener('visibilitychange', function() {
      if (document.hidden) {
        // 页面隐藏时恢复滚动状态
        document.body.style.overflow = '';
        document.body.style.position = '';
        document.body.style.top = '';
        document.body.style.width = '';
        
        // 关闭模态框
        if (modal) modal.style.display = 'none';
        if (modalToggle) modalToggle.checked = false;
        isShow = false;
      }
    });
    
    // 页面卸载时清理
    window.addEventListener('beforeunload', function() {
      document.body.style.overflow = '';
      document.body.style.position = '';
      document.body.style.top = '';
      document.body.style.width = '';
    });
    
    // 强制初始化为公有云模式
    switchTableContent('Public');
    updateMobileContent();
  }
  
  // 确保在client:load模式下正确初始化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    // DOM已经加载完成，立即初始化
    init();
  }
</script>

