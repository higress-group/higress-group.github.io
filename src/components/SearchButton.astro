---
// 自定义搜索组件
---

<div class="custom-search">
  <button
    id="search-toggle"
    class="search-button"
    aria-label="搜索"
    title="搜索 (Ctrl+K)"
  >
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="11" cy="11" r="8"/>
      <path d="m21 21-4.35-4.35"/>
    </svg>
  </button>

  <!-- 搜索对话框 -->
  <dialog id="search-dialog" class="search-dialog">
    <div class="dialog-content">
      <div class="search-header">
        <input
          type="search"
          id="search-input"
          class="search-input"
          placeholder="搜索文档..."
          autocomplete="off"
        />
        <button id="close-search" class="close-button" aria-label="关闭">
          ✕
        </button>
      </div>
      <div class="search-results">
        <div class="search-notice">
          <p>搜索功能仅在生产构建中可用。</p>
          <p>运行 <code>npm run build && npm run preview</code> 以测试搜索。</p>
        </div>
      </div>
    </div>
  </dialog>
</div>

<script>
  // 搜索功能
  const searchToggle = document.getElementById('search-toggle');
  const searchDialog = document.getElementById('search-dialog') as HTMLDialogElement;
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const closeSearch = document.getElementById('close-search');

  // 打开搜索对话框
  function openSearch() {
    searchDialog?.showModal();
    searchInput?.focus();
  }

  // 关闭搜索对话框
  function closeSearchDialog() {
    searchDialog?.close();
  }

  // 点击按钮打开搜索
  searchToggle?.addEventListener('click', openSearch);

  // 关闭按钮
  closeSearch?.addEventListener('click', closeSearchDialog);

  // Ctrl+K 快捷键
  document.addEventListener('keydown', (e) => {
    if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
      e.preventDefault();
      openSearch();
    }
    // ESC 关闭
    if (e.key === 'Escape') {
      closeSearchDialog();
    }
  });

  // 点击对话框外部关闭
  searchDialog?.addEventListener('click', (e) => {
    const rect = searchDialog.getBoundingClientRect();
    if (
      e.clientX < rect.left ||
      e.clientX > rect.right ||
      e.clientY < rect.top ||
      e.clientY > rect.bottom
    ) {
      closeSearchDialog();
    }
  });
</script>

<style>
  .custom-search {
    display: flex;
    align-items: center;
  }

  .search-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: var(--sl-color-bg-highlight);
    color: var(--sl-color-text-strong);
    border: none;
    cursor: pointer;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    padding: 0;
  }

  .search-button:hover {
    background-color: var(--sl-color-bg-element);
    transform: scale(1.05);
  }

  .search-button:active {
    transform: scale(0.95);
  }

  .search-button svg {
    width: 18px;
    height: 18px;
  }

  /* 搜索对话框 */
  .search-dialog {
    max-width: 600px;
    width: 90vw;
    max-height: 80vh;
    border: 1px solid var(--sl-color-gray-5, #d1d5db);
    border-radius: 0.75rem;
    padding: 0;
    background-color: var(--sl-color-bg, white);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .search-dialog::backdrop {
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
  }

  .dialog-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .search-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    border-bottom: 1px solid var(--sl-color-gray-5, #d1d5db);
  }

  .search-input {
    flex: 1;
    padding: 0.5rem;
    border: none;
    outline: none;
    background: transparent;
    color: var(--sl-color-text, #111827);
    font-size: 1rem;
  }

  .close-button {
    padding: 0.5rem;
    border: none;
    background: transparent;
    color: var(--sl-color-gray-3, #6b7280);
    cursor: pointer;
    border-radius: 0.25rem;
    font-size: 1.25rem;
    line-height: 1;
  }

  .close-button:hover {
    background-color: var(--sl-color-gray-6, #f3f4f6);
  }

  .search-results {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
  }

  .search-notice {
    text-align: center;
    color: var(--sl-color-gray-3, #6b7280);
    padding: 2rem 1rem;
  }

  .search-notice p {
    margin: 0.5rem 0;
  }

  .search-notice code {
    padding: 0.125rem 0.375rem;
    background-color: var(--sl-color-gray-6, #f3f4f6);
    border-radius: 0.25rem;
    font-family: monospace;
    font-size: 0.875rem;
  }
</style>
