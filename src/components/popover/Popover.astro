---
interface Props {
  placement?: "top" | "bottom";
  class?: string;
  trigger?: "hover" | "click";
}

const { placement = "top", class: className = "", trigger = "hover" } = Astro.props;
---

<div class:list={["popover-container", className]} data-trigger={trigger}>
  <div class="trigger">
    <slot />
  </div>
  <div class:list={["popover-content", placement]}>
    <slot name="content" />
  </div>
</div>

<style>
  .popover-container {
    position: relative;
    display: inline-block;
  }

  .popover-content {
    visibility: hidden;
    opacity: 0;
    position: absolute;
    z-index: 50; /* higher than typical content */
    background: white;
    border-radius: 0.5rem; /* rounded-lg */
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); /* shadow-lg */
    padding: 0.5rem;
    transition: all 0.2s ease-in-out;
    width: max-content;
    left: 50%;
    transform: translateX(-50%) translateY(0.5rem);
    pointer-events: none;
  }

  .popover-container:hover .popover-content {
    visibility: visible;
    opacity: 1;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  .popover-content.top {
    bottom: 100%;
    margin-bottom: 0.5rem;
    top: auto;
  }

  .popover-content.bottom {
    top: 100%;
    margin-top: 0.5rem;
    bottom: auto;
  }

  /* Triangle/Arrow (Optional, but nice) */
  .popover-content::after {
    content: "";
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    border-width: 6px;
    border-style: solid;
    border-color: transparent;
  }

  .popover-content.top::after {
    top: 100%;
    border-top-color: white;
  }

  .popover-content.bottom::after {
    bottom: 100%;
    border-bottom-color: white;
  }
</style>
