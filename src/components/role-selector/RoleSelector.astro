---
/**
 * RoleSelector - Onboarding role segmentation component
 * Helps users choose their path based on their role (Developer vs Decision Maker)
 */
import { useTranslations, localizeUrl } from "@/i18n/utils";

const locale = Astro.currentLocale || 'root';
const t = useTranslations(locale);

interface Props {
  class?: string;
}

const { class: className } = Astro.props;

const roles = [
  {
    id: 'developer',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>`,
    label: t('home.role.selector.developer'),
    desc: t('home.role.selector.developer.desc'),
    time: t('home.role.selector.developer.time'),
    href: localizeUrl('/ai/quick-start', locale),
  },
  {
    id: 'decision_maker',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>`,
    label: t('home.role.selector.decision_maker'),
    desc: t('home.role.selector.decision_maker.desc'),
    time: t('home.role.selector.decision_maker.time'),
    href: localizeUrl('/ai-gateway', locale),
  }
];
---

<div class:list={["role-selector", className]}>
  <div class="role-selector-title">
    <span class="wave-emoji">ðŸ‘‹</span>
    <span>{t('home.role.selector.title')}</span>
  </div>
  <div class="role-selector-options">
    {roles.map((role) => (
      <a href={role.href} class="role-option group" data-role={role.id}>
        <div class="role-icon" set:html={role.icon} />
        <div class="role-content">
          <div class="role-label-row">
            <span class="role-label">{role.label}</span>
            <span class="role-time-badge">{role.time}</span>
          </div>
          <div class="role-desc">{role.desc}</div>
        </div>
        <div class="role-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </div>
      </a>
    ))}
  </div>
</div>

<style>
  .role-selector {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .role-selector-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-gray-600);
  }

  :global(.dark) .role-selector-title {
    color: var(--color-gray-300);
  }

  .wave-emoji {
    animation: wave 2s ease-in-out infinite;
    display: inline-block;
    transform-origin: 70% 70%;
  }

  @keyframes wave {
    0%, 100% { transform: rotate(0deg); }
    10%, 30% { transform: rotate(14deg); }
    20% { transform: rotate(-8deg); }
    40% { transform: rotate(-4deg); }
    50%, 70% { transform: rotate(10deg); }
    60% { transform: rotate(0deg); }
    80% { transform: rotate(0deg); }
  }

  .role-selector-options {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .role-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(62, 92, 244, 0.15);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    min-width: 180px;
  }

  :global(.dark) .role-option {
    background: rgba(30, 30, 40, 0.6);
    border-color: rgba(109, 91, 255, 0.3);
  }

  .role-option:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(62, 92, 244, 0.15);
    border-color: rgba(62, 92, 244, 0.4);
    background: rgba(255, 255, 255, 0.9);
  }

  :global(.dark) .role-option:hover {
    background: rgba(40, 40, 55, 0.9);
    border-color: rgba(109, 91, 255, 0.5);
    box-shadow: 0 8px 24px rgba(109, 91, 255, 0.2);
  }

  .role-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #3E5CF4 0%, #6D5BFF 100%);
    border-radius: 10px;
    color: white;
    flex-shrink: 0;
  }

  .role-content {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    flex: 1;
  }

  .role-label-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .role-label {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-gray-900);
  }

  .role-time-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.125rem 0.5rem;
    font-size: 0.6875rem;
    font-weight: 500;
    color: #3E5CF4;
    background: rgba(62, 92, 244, 0.1);
    border-radius: 9999px;
    white-space: nowrap;
  }

  :global(.dark) .role-time-badge {
    color: #a5b4fc;
    background: rgba(109, 91, 255, 0.2);
  }

  :global(.dark) .role-label {
    color: var(--color-gray-100);
  }

  .role-desc {
    font-size: 0.75rem;
    color: var(--color-gray-500);
  }

  :global(.dark) .role-desc {
    color: var(--color-gray-400);
  }

  .role-arrow {
    display: flex;
    align-items: center;
    margin-left: auto;
    color: var(--color-gray-400);
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateX(-8px);
  }

  .role-option:hover .role-arrow {
    opacity: 1;
    transform: translateX(0);
    color: #3E5CF4;
  }

  :global(.dark) .role-option:hover .role-arrow {
    color: #6D5BFF;
  }

  @media (max-width: 640px) {
    .role-selector-options {
      flex-direction: column;
      width: 100%;
    }

    .role-option {
      width: 100%;
      min-width: unset;
    }
  }
</style>
