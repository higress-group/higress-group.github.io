<!-- Tab Switching Script -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.comparison-tab');
    const contents = document.querySelectorAll('.comparison-content');
    
    console.log('Tab switching initialized:', tabs.length, 'tabs found');
    
    function switchTab(targetTab, clickedTab) {
      console.log('Switching to tab:', targetTab);
      
      // Update active tab
      tabs.forEach(t => {
        t.classList.remove('active');
        t.setAttribute('aria-selected', 'false');
        t.setAttribute('tabindex', '-1');
      });
      
      clickedTab.classList.add('active');
      clickedTab.setAttribute('aria-selected', 'true');
      clickedTab.setAttribute('tabindex', '0');
      
      // Update active content
      contents.forEach(c => c.classList.remove('active'));
      const targetContent = document.querySelector(`[data-content="${targetTab}"]`);
      if (targetContent) {
        targetContent.classList.add('active');
        console.log('Content switched to:', targetTab);
      } else {
        console.error('Target content not found:', targetTab);
      }
    }
    
    // Handle URL hash on page load
    function handleHashChange() {
      const hash = window.location.hash.substring(1); // Remove #
      if (hash && (hash === 'oneapi' || hash === 'litellm')) {
        const targetTab = document.querySelector(`[data-tab="${hash}"]`);
        if (targetTab) {
          switchTab(hash, targetTab);
          // Smooth scroll to the comparison section
          const comparisonSection = document.querySelector('.competitor-comparison-section');
          if (comparisonSection) {
            comparisonSection.scrollIntoView({ behavior: 'smooth' });
          }
        }
      }
    }
    
    // Handle initial hash
    handleHashChange();
    
    // Handle hash changes
    window.addEventListener('hashchange', handleHashChange);
    
    tabs.forEach((tab, index) => {
      // Click handler
      tab.addEventListener('click', (e) => {
        e.preventDefault();
        const targetTab = tab.dataset.tab;
        switchTab(targetTab, tab);
        // Update URL hash
        history.pushState(null, null, `#${targetTab}`);
      });
      
      // Keyboard handler
      tab.addEventListener('keydown', (e) => {
        let targetIndex = index;
        
        if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
          e.preventDefault();
          targetIndex = index > 0 ? index - 1 : tabs.length - 1;
        } else if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
          e.preventDefault();
          targetIndex = index < tabs.length - 1 ? index + 1 : 0;
        } else if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          const targetTab = tab.dataset.tab;
          switchTab(targetTab, tab);
          history.pushState(null, null, `#${targetTab}`);
          return;
        }
        
        if (targetIndex !== index) {
          const targetTab = tabs[targetIndex];
          switchTab(targetTab.dataset.tab, targetTab);
          targetTab.focus();
          history.pushState(null, null, `#${targetTab.dataset.tab}`);
        }
      });
    });
  });
</script>