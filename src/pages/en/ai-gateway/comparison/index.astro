---
import SiteLayout from "../../../../layout/siteLayout.astro";
import Section from "../../../../container/common/section.astro";
import { useTranslations, localizeUrl } from "@/i18n/utils";
import { LINKS } from "@/constant";

const locale = Astro.currentLocale || 'root';
const t = useTranslations(locale);

const title = "Higress vs Other AI Gateways - Comprehensive Comparison";
const description = "In-depth comparison of Higress with OneAPI, LiteLLM and other mainstream AI gateway solutions. Compare architecture, features and enterprise capabilities to choose the best AI gateway solution.";
const keywords = "AI Gateway Comparison, Higress vs OneAPI, Higress vs LiteLLM, AI Gateway Selection, Enterprise AI Gateway, API Gateway Comparison";
---

<SiteLayout title={title} description={description} keywords={keywords}>
  <div class="comparison-page">
    <!-- Hero Section -->
    <div class="hero-section">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-center">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-semibold mb-6">
            <svg class="mr-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            Competitive Analysis
          </div>
          <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 mb-6">
            {t('ai.product.competitor_compare.title')}
          </h1>
          <p class="text-xl text-gray-600 max-w-4xl mx-auto mb-8">
            {t('ai.product.competitor_compare.subtitle')}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href={localizeUrl('/ai/quick-start', locale)} class="inline-flex items-center px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary/90 transition">
              <svg class="mr-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
              Try Higress Now
            </a>
            <a href="/en/ai-gateway/" class="inline-flex items-center px-6 py-3 bg-white text-gray-700 font-medium rounded-lg border border-gray-300 hover:bg-gray-50 transition">
              Learn More Features
              <svg class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Comparison Section -->
    <div class="competitor-comparison-section">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Tab Switcher -->
        <div class="comparison-tabs" role="tablist" aria-label="Competitor comparison options">
          <button class="comparison-tab active" data-tab="oneapi" role="tab" aria-selected="true" aria-controls="oneapi-content" tabindex="0">
            {t('ai.product.competitor_compare.tab.oneapi')}
          </button>
          <button class="comparison-tab" data-tab="litellm" role="tab" aria-selected="false" aria-controls="litellm-content" tabindex="-1">
            {t('ai.product.competitor_compare.tab.litellm')}
          </button>
        </div>

        <!-- OneAPI Comparison -->
        <div class="comparison-content active" data-content="oneapi" role="tabpanel" id="oneapi-content" aria-labelledby="oneapi-tab">
          <div class="comparison-table-wrapper">
            <table class="comparison-table">
              <thead>
                <tr>
                  <th class="feature-col">Comparison Item</th>
                  <th class="competitor-col">OneAPI</th>
                  <th class="higress-col">
                    <div class="higress-header">
                      <span>Higress</span>
                      <svg class="crown-icon" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.oneapi.core_function')}</td>
                  <td class="competitor-value">{t('ai.product.competitor_compare.oneapi.core_function.oneapi')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.oneapi.core_function.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.oneapi.maintenance')}</td>
                  <td class="competitor-value">{t('ai.product.competitor_compare.oneapi.maintenance.oneapi')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.oneapi.maintenance.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.oneapi.security')}</td>
                  <td class="competitor-value negative">{t('ai.product.competitor_compare.oneapi.security.oneapi')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.oneapi.security.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.oneapi.content_safety')}</td>
                  <td class="competitor-value negative">{t('ai.product.competitor_compare.oneapi.content_safety.oneapi')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.oneapi.content_safety.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.oneapi.model_management')}</td>
                  <td class="competitor-value">{t('ai.product.competitor_compare.oneapi.model_management.oneapi')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.oneapi.model_management.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.oneapi.observability')}</td>
                  <td class="competitor-value negative">{t('ai.product.competitor_compare.oneapi.observability.oneapi')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.oneapi.observability.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.oneapi.extensibility')}</td>
                  <td class="competitor-value negative">{t('ai.product.competitor_compare.oneapi.extensibility.oneapi')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.oneapi.extensibility.higress')}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- LiteLLM Comparison -->
        <div class="comparison-content" data-content="litellm" role="tabpanel" id="litellm-content" aria-labelledby="litellm-tab">
          <div class="comparison-table-wrapper">
            <table class="comparison-table">
              <thead>
                <tr>
                  <th class="feature-col">Comparison Item</th>
                  <th class="competitor-col">LiteLLM</th>
                  <th class="higress-col">
                    <div class="higress-header">
                      <span>Higress</span>
                      <svg class="crown-icon" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    </div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.litellm.architecture')}</td>
                  <td class="competitor-value negative">{t('ai.product.competitor_compare.litellm.architecture.litellm')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.litellm.architecture.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.litellm.load_balancing')}</td>
                  <td class="competitor-value">{t('ai.product.competitor_compare.litellm.load_balancing.litellm')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.litellm.load_balancing.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.litellm.retry_fallback')}</td>
                  <td class="competitor-value">{t('ai.product.competitor_compare.litellm.retry_fallback.litellm')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.litellm.retry_fallback.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.litellm.observability')}</td>
                  <td class="competitor-value">{t('ai.product.competitor_compare.litellm.observability.litellm')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.litellm.observability.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.litellm.self_hosted')}</td>
                  <td class="competitor-value">{t('ai.product.competitor_compare.litellm.self_hosted.litellm')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.litellm.self_hosted.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.litellm.extensibility')}</td>
                  <td class="competitor-value negative">{t('ai.product.competitor_compare.litellm.extensibility.litellm')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.litellm.extensibility.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.litellm.usability')}</td>
                  <td class="competitor-value negative">{t('ai.product.competitor_compare.litellm.usability.litellm')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.litellm.usability.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.litellm.security')}</td>
                  <td class="competitor-value negative">{t('ai.product.competitor_compare.litellm.security.litellm')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.litellm.security.higress')}</td>
                </tr>
                <tr>
                  <td class="feature-name">{t('ai.product.competitor_compare.litellm.enterprise')}</td>
                  <td class="competitor-value negative">{t('ai.product.competitor_compare.litellm.enterprise.litellm')}</td>
                  <td class="higress-value highlighted">{t('ai.product.competitor_compare.litellm.enterprise.higress')}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Comparison CTA -->
        <div class="comparison-cta">
          <div class="comparison-cta-content">
            <h4 class="comparison-cta-title">{t('ai.product.competitor_compare.cta.title')}</h4>
            <p class="comparison-cta-desc">{t('ai.product.competitor_compare.cta.desc')}</p>
            <div class="comparison-cta-buttons">
              <a href={localizeUrl('/ai/quick-start', locale)} class="comparison-btn primary">
                {t('ai.product.competitor_compare.cta.quickstart')}
                <svg class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Additional Benefits Section -->
    <div class="benefits-section">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Why Choose Higress AI Gateway?</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Built on years of large-scale production experience at Alibaba Cloud, Higress provides enterprise-grade AI gateway solutions
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="benefit-card">
            <div class="benefit-icon">
              <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="benefit-title">High-Performance Architecture</h3>
            <p class="benefit-desc">Built on Envoy proxy, supports hundreds of thousands of requests per second with millisecond-level configuration updates</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">
              <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="benefit-title">Enterprise Security</h3>
            <p class="benefit-desc">Integrated with Alibaba Cloud content security, providing real-time content filtering, data masking and multiple authentication strategies</p>
          </div>
          <div class="benefit-card">
            <div class="benefit-icon">
              <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            </div>
            <h3 class="benefit-title">Intelligent Operations</h3>
            <p class="benefit-desc">Complete monitoring dashboard, token consumption analysis, latency monitoring and intelligent load balancing</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</SiteLayout>

