---
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const docs = await getCollection('docs');
  // Find all docs under docs/ai/
  const aiDocs = docs.filter(doc => doc.slug.startsWith('docs/ai/'));

  return aiDocs.map(doc => {
    // extract the part after docs/ai/ to be the slug for this route
    const slug = doc.slug.replace(/^docs\/ai\//, '');
    return {
      params: { slug },
      props: { destination: `/docs/ai/${slug}/` },
    };
  });
}

const { destination } = Astro.props;
return Astro.redirect(destination);
---
<meta http-equiv="refresh" content={`0;url=${destination}`} />
